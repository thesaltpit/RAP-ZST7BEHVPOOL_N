@Metadata.layer: #CORE
@UI.headerInfo:{
    typeName: 'Document Details',
    typeNamePlural: 'Accounting Documents',
    title:{
        value: 'compcd',
        type: #STANDARD
    },
    description:{
        value: 'compcddescr',
        type: #STANDARD
    }
}

@Search.searchable: true
annotate view ZST7_ACCHDR_ROOT_POOL_CONSM with
{

