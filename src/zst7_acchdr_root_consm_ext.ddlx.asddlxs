  //    purpose: #STANDARD
  //  },

  {
    id:'DocumentDetails',
    type: #FIELDGROUP_REFERENCE,
    parentId: 'HeaderInfo',
    purpose: #STANDARD,
    targetQualifier: 'DocumentHeaderData',
    label: 'Number'
  },

  {
    id:'Details',
    type: #FIELDGROUP_REFERENCE,
    parentId: 'HeaderInfo',
    purpose: #STANDARD,
    targetQualifier: 'DetailsData',
    label: 'Type & Date'
  },

  {
    id: 'Creator',
    type: #FIELDGROUP_REFERENCE,
    parentId: 'HeaderInfo',
